<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="NameOfFile"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/arsenal"
        android:id="@+id/nameOfFileTextView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contentTextView"
                android:textSize="16sp"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:id="@+id/progressBarContent"/>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_gravity="right"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/no"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/arsenal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_gravity="right"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/removeTexTView"
            android:layout_toLeftOf="@+id/no"
            android:fontFamily="@font/arsenal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to My Files"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_gravity="right"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/addToMyFilesTextView"
            android:layout_toLeftOf="@+id/removeTexTView"
            android:fontFamily="@font/arsenal"/>

    </RelativeLayout>

</LinearLayout>